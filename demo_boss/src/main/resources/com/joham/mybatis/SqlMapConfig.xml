<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE configuration PUBLIC "-//ibatis.apache.org//DTD Config 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-config.dtd">
<configuration>

	<typeAliases>
		<!-- Entities 参数实体 -->
		<!-- com.ningpai.web.bean 包中的 所有Bean, 取个别名 -->
		<!-- 比如Product类就用Product来表示 -->
		<typeAlias type="com.Goods" alias="Goods" />
		<typeAlias type="com.GoodsBrand" alias="GoodsBrand"/>
		<typeAlias type="com.User" alias="User"/>
	</typeAliases>
	
	<mappers>
		<!-- 对应Bean类的xml配置文件的路径信息 -->
		
		
		<!-- 商品mapper文件 -->
		<mapper resource="com/ningpai/mybatis/mapper/GoodsMapper.xml"/>
		<mapper resource="com/ningpai/mybatis/mapper/GoodsBrandMapper.xml"/>
		<mapper resource="com/ningpai/mybatis/mapper/UserMapper.xml"/>
	</mappers>
</configuration>
